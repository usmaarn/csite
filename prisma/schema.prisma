generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model users {
  id           Int       @id @default(autoincrement())
  name         String
  ward         String
  polling_unit String
  pvc_number   String    @unique(map: "sqlite_autoindex_users_1")
  phone_number String    @unique(map: "sqlite_autoindex_users_2")
  address      String
  role         String    @default("user")
  created_at   DateTime? @default(now())
}

model admin {
  id         Int       @id @default(autoincrement())
  username   String    @unique(map: "sqlite_autoindex_admin_1")
  password   String    @unique(map: "sqlite_autoindex_admin_2")
  created_at DateTime? @default(now())
}
